<% @books.each do |book| %>
  <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4 td-books-list">
    <%= link_to book_path(book), class: "td-book-a" do %>
      <div class="td-index-books-content">
        <div class="td-index-book-image">
          <%= image_tag book_image(book), class: "td-book-picture" %>
        </div>
        <div class="td-index-book-content">
          <h3 class="text-center">
            <%= book.title %>
          </h3>
          <div>
            <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
              <i><%= book.author %></i>
            </div>
            <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
              <i><%= book.publish_time %></i>
            </div>
            <div class="clearfix"></div>
          </div>
          <hr>
          <div class="td-index-book-description">
            <i class="td-description"><%= book.description %></i>
          </div>
        </div>
      </div>
    <% end %>
  </div>
<% end %>
<%= paginate @books, remote: true %>
