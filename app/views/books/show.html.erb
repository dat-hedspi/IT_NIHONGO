<div class="col-sm-8 col-sm-offset-2">
  <div class="td-invoice-box padding">
    <div class="td-invoice-show-top">
      <span></span>
      <hr>
    </div>

    <div class="td-invoice-content">
      <div class="td-invoice-content-left text-center">
        <% unless @book.picture.url.nil? %>
          <%= image_tag @book.picture.url, class: "width fix-height" %>
        <% else %>
          <%= image_tag "books.jpg", class: "width fix-height" %>
        <% end %>
        <%= rating_for @book, "favorite", :half_show => true, path: "star_icons",
          star: 10, enable_half: true %>
      </div>
      <div class="td-invoice-content-right">
        <div class="td-line">
          <i class="fa fa-circle-o td-circle-first td-color"
            aria-hidden="true"></i>
          <i class="fa fa-circle-o td-circle-second td-color"
            aria-hidden="true"></i>
        </div>

        <div class="td-invoice-content-right-detail">
          <h2 class="td-invoice-address-top">
            <%= @book.title %>
          </h2>
          <p class="td-invoice-address-bottom">
            <%= @book.description %>
          </p>
          <div class="clearfix"></div>
        </div>
      </div>
      <div class="clearfix"></div>
    </div>
    <hr>

    <div class="td-invoice-content-2">
      <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4">
        <p class="td-text-top text-center">
          <%= t "home.author" %>
        </p>
        <p class="td-text-bottom text-center">
          <%= @book.author %>
        </p>
      </div>

      <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4">
        <p class="td-text-top text-center">
          <%= t "books.new.pages" %>
        </p>
        <p class="td-text-bottom text-center">
          <%= @book.pages %>
        </p>
      </div>

      <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4">
        <p class="td-text-top text-center">
          <%= t "books.new.publish_time" %>
        </p>
        <p class="td-text-bottom text-center">
          <%= l @book.publish_time, format: :default %>
        </p>
      </div>
    </div>

    <div class="clearfix"></div>
  </div>

  <div class="td-invoice-box padding">
    <div id="review_form">
      <%= render "shared/review_form", review: @review_new %>
    </div>
    <br>
  </div>

  <div class="td-invoice-box padding">
    <% unless @reviews.blank? %>
      <% @reviews.each do |review| %>
      <div class="w3-container w3-card-2 w3-white w3-round w3-margin"><br>
        <% unless current_user.avatar.url.nil? %>
          <%= image_tag current_user.avatar.url, class: "w3-circle td-img" %>
        <% else %>
          <%= image_tag "noprofile.jpg", class: "w3-circle td-img" %>
        <% end %>
        <span class="w3-right w3-opacity"><%= time_ago_in_words review.created_at %></span>
        <span class="bold"><%= review.user.username %></span><br>
        <hr class="w3-clear">
        <p class="td-white_space"><%= review.content %></p>
        <div class="w3-row-padding" style="margin:0 -16px">
          <div class="td-image-auto">
            <% unless review.book.picture.url.nil? %>
              <%= image_tag review.book.picture.url, class: "width fix-height" %>
            <% else %>
              <%= image_tag "books.jpg", class: "width fix-height" %>
            <% end %>
          </div>
        </div>
        <button type="button" class="w3-btn w3-theme-d1 w3-margin-bottom">
          <i class="fa fa-thumbs-up"></i> <%= t "home.like" %>
        </button>
        <button type="button" class="w3-btn w3-theme-d2 w3-margin-bottom">
          <i class="fa fa-comment"></i> <%= t "home.comment" %>
        </button>
        <% unless current_user.nil? %>
          <div style="margin: 20px 0;" id="td-comment">
            <%= render "comments/comment_form",book: review.book, review: review,
              comment: review.user.comments.build %>
          </div>
        <% end %>
        <div class="comments">
          <% if review.comments.any? %>
            <% review.comments.each do |comment| %>
              <%= render "comments/comment", comment: comment %>
            <% end %>
          <% end %>
        </div>
      </div>
      <% end %>
    <% else %>
      <div>
        <h3 class="text-center">
          <%= t "no_content" %>
        </h3>
      </div>
    <% end %>
  </div>
</div>
