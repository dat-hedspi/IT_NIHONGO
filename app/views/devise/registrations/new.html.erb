<section class="signin">
  <div class="container">
    <div class="row">
      <div class="col-md-7 col-sm-7 col-xs-7 td-col-left">
        <h2><%= t ("devise.sign_up") %></h2>

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= devise_error_messages! %>

          <div class="input">
            <%= f.label :email %><br />
            <%= f.email_field :email, autofocus: true,
              class: "form-control signin-input" %>
          </div>

          <div class="input">
            <%= f.label :username %><br />
            <%= f.text_field :username, class: "form-control signin-input" %>
          </div>

          <div class="input">
            <%= f.label :password %>
            <% if @minimum_password_length %>
              <em>
                (<%= @minimum_password_length %> <%= t("devise.validate") %>)
              </em>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "off",
              class: "form-control signin-input" %>
          </div>

          <div class="input">
            <%= f.label :password_confirmation %><br />
            <%= f.password_field :password_confirmation, autocomplete: "off",
              class: "form-control signin-input" %>
          </div>

          <div class="input">
            <%= f.label :avatar %><br />
            <%= f.file_field :avatar, accept: "image/jpeg,image/gif,image/png" %>
          </div>

          <div class="actions">
            <%= f.submit t("devise.sign_up"),
              class: "hvr-pulse-shrink btn btn-primary" %>
          </div>

        <% end %>

      </div>
      <div class="col-md-5 col-sm-5 col-xs-12 td-col-right">
        <%= render "devise/shared/links" %>
      </div>
      <div class="clearfix"></div>
    </div>
  </div>
</section>
