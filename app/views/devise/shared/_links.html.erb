<% unless controller_name == "sessions" %>
  <p><%= t :td_login %></p>
  <%= link_to t("devise.log_in"),
    new_session_path(resource_name),
    class:"btn btn-primary hvr-pulse-shrink" %><br />
<% end %>

<% if devise_mapping.registerable? && controller_name != "registrations" %>
  <p><%= t :td_signup %></p>
  <%= link_to t("devise.sign_up"), new_registration_path(resource_name),
    class:"btn btn-primary hvr-pulse-shrink" %><br />
<% end %>

<% if devise_mapping.confirmable? && controller_name != "confirmations" %>
  <%= link_to t("devise.not_recevive"),
    new_confirmation_path(resource_name) %><br />
<% end %>

<% if devise_mapping.lockable? &&
  resource_class.unlock_strategy_enabled?(:email) &&
  controller_name != "unlocks" %>
  <%= link_to t("devise.not_unlock"),
    new_unlock_path(resource_name) %><br />
<% end %>
