<!-- Page Container -->
<div class="w3-container w3-content" style="max-width:1400px;margin-top:80px">
  <!-- The Grid -->
  <div class="w3-row">
    <!-- Left Column -->
    <div class="w3-col m3">
      <!-- Profile -->
      <div class="w3-card-2 w3-round w3-white">
        <div class="w3-container">
          <h4 class="w3-center"><%= t "home.profile" %></h4>
          <p class="w3-center">
            <% unless current_user.avatar.url.nil? %>
              <%= image_tag current_user.avatar.url, class: "w3-circle td-img-avatar" %>
            <% else %>
              <%= image_tag "noprofile.jpg", class: "w3-circle td-img-avatar" %>
            <% end %>
          </p>
          <hr>
          <p>
            <i class="fa fa-pencil fa-fw w3-margin-right w3-text-theme"></i>
            <%= current_user.username %>
          </p>
          <p>
            <i class="fa fa-home fa-fw w3-margin-right w3-text-theme"></i>
            <%= current_user.email %>
          </p>
          <p>
            <i class="fa fa-birthday-cake fa-fw w3-margin-right w3-text-theme"></i>
            <%= t "home.text" %>
          </p>
        </div>
      </div>
      <br>

      <!-- Accordion -->
      <div class="w3-card-2 w3-round">
        <div class="w3-accordion w3-white">
          <button onclick="myFunction('Demo1')"
            class="w3-btn-block w3-theme-l1 w3-left-align">
            <i class="fa fa-circle-o-notch fa-fw w3-margin-right"></i>
            <%= t "home.group" %>
          </button>
          <div id="Demo1" class="w3-accordion-content w3-container">
            <p><%= t "home.text" %></p>
          </div>
          <button onclick="myFunction('Demo2')"
            class="w3-btn-block w3-theme-l1 w3-left-align">
            <i class="fa fa-calendar-check-o fa-fw w3-margin-right"></i>
            <%= t "home.events" %>
          </button>
          <div id="Demo2" class="w3-accordion-content w3-container">
            <p><%= t "home.text" %></p>
          </div>
          <button onclick="myFunction('Demo3')"
            class="w3-btn-block w3-theme-l1 w3-left-align">
            <i class="fa fa-users fa-fw w3-margin-right"></i>
            <%= t "home.photos" %>
          </button>
          <div id="Demo3" class="w3-accordion-content w3-container">
            <div class="w3-row-padding">
              <br>
              <div class="w3-half">
                <img src="http://www.w3schools.com/css/img_fjords.jpg"
                  class="w3-margin-bottom width">
              </div>
              <div class="w3-half">
                <img src="http://www.w3schools.com/css/img_fjords.jpg"
                  class="w3-margin-bottom width">
              </div>
              <div class="w3-half">
                <img src="http://www.w3schools.com/css/img_fjords.jpg"
                  class="w3-margin-bottom width">
              </div>
              <div class="w3-half">
                <img src="http://www.w3schools.com/css/img_fjords.jpg"
                  class="w3-margin-bottom width">
              </div>
              <div class="w3-half">
                <img src="http://www.w3schools.com/css/img_fjords.jpg"
                  class="w3-margin-bottom width">
              </div>
              <div class="w3-half">
                <img src="http://www.w3schools.com/css/img_fjords.jpg"
                  class="w3-margin-bottom width">
              </div>
            </div>
          </div>
        </div>
      </div>
      <br>

      <!-- Interests -->
      <div class="w3-card-2 w3-round w3-white w3-hide-small">
        <div class="w3-container">
          <p><%= t "home.interests" %></p>
          <p>
            <span class="w3-tag w3-small w3-theme-d5"><%= t "home.test2" %></span>
            <span class="w3-tag w3-small w3-theme-d4"><%= t "home.test2" %></span>
            <span class="w3-tag w3-small w3-theme-d3"><%= t "home.test2" %></span>
            <span class="w3-tag w3-small w3-theme-d2"><%= t "home.test2" %></span>
            <span class="w3-tag w3-small w3-theme-d1"><%= t "home.test2" %></span>
            <span class="w3-tag w3-small w3-theme"><%= t "home.test2" %></span>
            <span class="w3-tag w3-small w3-theme-l1"><%= t "home.test2" %></span>
            <span class="w3-tag w3-small w3-theme-l2"><%= t "home.test2" %></span>
            <span class="w3-tag w3-small w3-theme-l3"><%= t "home.test2" %></span>
            <span class="w3-tag w3-small w3-theme-l4"><%= t "home.test2" %></span>
            <span class="w3-tag w3-small w3-theme-l5"><%= t "home.test2" %></span>
          </p>
        </div>
      </div>
      <br>

      <!-- Alert Box -->
      <div class="w3-container w3-round w3-theme-l4 w3-border
        w3-theme-border w3-margin-bottom w3-hide-small">
        <span onclick="this.parentElement.style.display='none'"
          class="w3-hover-text-grey w3-closebtn">
          <i class="fa fa-remove"></i>
        </span>
        <p><strong>Hey!</strong></p>
        <p><%= t "home.text" %></p>
      </div>

    <!-- End Left Column -->
    </div>

    <!-- Middle Column -->
    <div class="w3-col m7">
      <% unless @reviews.blank? %>
        <% @reviews.each do |review| %>
        <div class="w3-container w3-card-2 w3-white w3-round w3-margin"><br>
          <% unless current_user.avatar.url.nil? %>
            <%= image_tag current_user.avatar.url, class: "w3-circle td-img" %>
          <% else %>
            <%= image_tag "noprofile.jpg", class: "w3-circle td-img" %>
          <% end %>
          <span class="w3-right w3-opacity"><%= time_ago_in_words review.created_at %></span>
          <span class="bold"><%= review.user.username %></span><br>
          <hr class="w3-clear">
          <p class="td-white_space"><%= review.content %></p>
          <div class="w3-row-padding" style="margin:0 -16px">
            <div class="td-image-auto">
              <% unless review.book.picture.url.nil? %>
                <%= image_tag review.book.picture.url, class: "width fix-height" %>
              <% else %>
                <%= image_tag "books.jpg", class: "width fix-height" %>
              <% end %>
            </div>
          </div>
          <button type="button" class="w3-btn w3-theme-d1 w3-margin-bottom">
            <i class="fa fa-thumbs-up"></i> <%= t "home.like" %>
          </button>
          <button type="button" class="w3-btn w3-theme-d2 w3-margin-bottom">
            <i class="fa fa-comment"></i> <%= t "home.comment" %>
          </button>
          <% unless current_user.nil? %>
            <div style="margin: 20px 0;" id="td-comment">
              <%= render "comments/comment_form",book: review.book, review: review,
                comment: review.user.comments.build %>
            </div>
          <% end %>
          <div class="comments">
            <% if review.comments.any? %>
              <%= render "comments/comment", review: review %>
            <% end %>
          </div>
        </div>
        <% end %>
      <% else %>
        <div>
          <h3 class="text-center">
            <%= t "no_content" %>
          </h3>
        </div>
      <% end %>

    <!-- End Middle Column -->
    </div>

    <!-- Right Column -->
    <div class="w3-col m2">
      <div class="w3-card-2 w3-round w3-white w3-center">
        <div class="w3-container">
          <p><%= t "home.top_book" %>:</p>
          <img src="http://www.w3schools.com/css/img_fjords.jpg" alt="Forest"
            class="width">
          <p><strong><%= t "home.author" %></strong></p>
          <p><%= t "home.short_description" %></p>
          <p>
            <button class="w3-btn w3-btn-block w3-theme-l4">
            <%= t "home.detail" %>
            </button>
          </p>
        </div>
      </div>
      <br>

      <div class="w3-card-2 w3-round w3-white w3-padding-16 w3-center">
        <p>ADS</p>
      </div>
      <br>

      <div class="w3-card-2 w3-round w3-white w3-padding-32 w3-center">
        <p><i class="fa fa-bug w3-xxlarge"></i></p>
      </div>

    <!-- End Right Column -->
    </div>

  <!-- End Grid -->
  </div>

<!-- End Page Container -->
</div>
<br>
